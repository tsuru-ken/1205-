<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>内容</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>

    <td><%= link_to '詳細を確認する', post_path(post.id),data: { confirm: '本当に確認していいですか？' } %></td>
    <td><%= link_to "ブログを編集する", edit_post_path(post.id),data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'ブログを削除する', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }%></td>

  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくブログを投稿する', new_post_path %>

